// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-1.1.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ThemeType {
  LIGHT
  DARK
  SYSTEM
}

enum CategoryType {
  Entertainment
  Fees
  Groceries
  Health
  Mortgage
  Restaurants
  Shopping
  Transportation
  Travel
  Utilites
  Other
}

enum FrequencyType {
  Weekly
  EveryOtherWeek
  Monthly
  EveryOtherMonth
  Every3months
  Every6Months
  Yearly
  OneTimeOnly
}

model User {
  id Int @default(autoincrement())
  email String @unique
  firstName String
  lastName String
  phoneNumber String?
  uuid String @unique
  accounts Account[]
  preference UserPreference?
  bills Bill[]

  @@id([firstName, lastName])
}

model UserPreference {
  id Int @default(autoincrement())
  notifications Boolean @default(true)
  theme ThemeType @default(LIGHT)
  usageData Boolean @default(false)
  user User @relation(fields: [userId], references: [uuid])
  userId String @unique
}

model Account {
  id Int @id @default(autoincrement())
  accountId String @unique
  name String?
  currentBalance Float?
  currencyCode Int
  subtype String?
  type String
  owner User @relation(fields: [ownerId], references: [uuid])
  ownerId String
}

model Bill {
  id Int @id @default(autoincrement())
  name String
  amount Float
  frequency FrequencyType @default(OneTimeOnly)
  due_date DateTime
  category CategoryType @default(Other)
  paid Boolean @default(false)
  owner User @relation(fields: [ownerId], references: [uuid])
  ownerId String
}